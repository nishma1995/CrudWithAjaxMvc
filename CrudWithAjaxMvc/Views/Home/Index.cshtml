@model CrudWithAjaxMvc.Models.EmployeeViewModel
@{
    Layout = null;
}


<>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="jquery-3.5.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AddNewEmployee(0)">Add New Employee</a><br /><br />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date Of Birth</th>
                <th>Phone Number</th>
                <th>Action(Edit)</th>
                <th>Action(Delete)</th>

            </tr>
        </thead>
        <tbody id="SetEmployeeList">
            <tr id="LoadingStatus" style="color:red"></tr>
        </tbody>
    </table>
</div>
<script>
    $("#LoadingStatus").html("Loading...");
    $.get("/Home/GetEmployeeList", null, DataBind);
    function DataBind(EmployeeList) {
        var SetData = $("#SetEmployeeList");
        for (var i = 0; i < EmployeeList; i++) {

            var Data = "<tr class='row_" + EmployeeList[i].Id + "'>" +
                "<td>" + EmployeeList[i].Id + "</td>" +
                "<td>" + EmployeeList[i].Name + "</td>" +
                "<td>" + EmployeeList[i].DateOfBirth + "</td>" +
                "<td>" + EmployeeList[i].PhoneNumber + "</td>" +
                " <td>" + "<a href='#' class='btn btn-warning' onclick='EditEmployeeRecord()'><span class='glyphicon glyphicon-edit'></span></a>" + "</td>" +
                " <td>" + " < a href = '#' class='btn btn-danger' onclick = 'DeleteEmployeeRecord()' > <span class='glyphicon glyphicon-trash'></span></a > " + "</td > " +
                "</tr>";
            SetData.append(Data);
            $("#LoadingStatus").html("");
        }
    }
</script>


